{{ template "base" .}}
{{ define "content" }}
<div class="container">

        <div class="row">
          <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-5">Search for Availbility</h1>
                <form action="/search-availability" class="needs-validation" method="post" novalidate>
                <input type="hidden" name="csrf_token" value="{{.CSRFToken}}"/>
                  <div class="row">
                    <div class="col">
                      <div class="mb-3">
                        <label for="start_date" class="form-label">Starting Date</label>
                        <input required type="date" class="form-control" id="start_date" name="start_date" aria-describedby="start_date">
                        <div class="invalid-feedback">
                          required feild
                        </div>
                        <div id="emailHelp" class="form-text">Enter your starting state in the form of YYYY-MM-DD</div>
                      </div>
                    </div>
                    <div class="col">
                      <div class="mb-3">
                        <label for="end_date" class="form-label">Ending Date</label>
                        <input required type="date" class="form-control" id="end_date" name="end_date" aria-describedby="end_date">
                        <div class="invalid-feedback">
                          required feild
                        </div>
                        <div id="emailHelp" class="form-text">Enter your end state in the form of YYYY-MM-DD</div>
                      </div>
                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary">Search Availbility</button>
                </form>
            </div>
        </div>
    </div>
{{end}}